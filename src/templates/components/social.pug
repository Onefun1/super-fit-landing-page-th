
mixin comment(comment)
  li.list__item.comment
    .comment__photo
      img.comment__img(src=comment.src, alt="photo")
    .comment__info
      .comment__info-wrapp
          img.comment__pic(src=comment.pic, alt="like")
          span.comment__count!=comment.count
          span.comment__name!=comment.name
            | &#160;&#160;&#160;&#160;
          span.comment__text!=comment.text
      .comment__bottom.bottom
        .bottom__like
          span!=comment.like
        .bottom__time!=comment.time

